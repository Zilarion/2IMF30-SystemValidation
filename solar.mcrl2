% Drive procedure
% --------------------


% --------------------
% Process definition
% --------------------
init
	allow(
		{ s2c_VCS, c2s_VCS },
	comm(
		{ 
			recv_s2c_VCS | send_s2c_VCS -> s2c_VCS, 						% Communicates VCS from safety to CC
			recv_c2s_VCS | send_c2s_VCS -> c2s_VCS, 						% Communicates VCS from CC to safety
		}
		));
